(defun binmult()

(write-line "Enter a:")
(setf a (read))
(write-line "Enter b:")
(setf b (read))
(setf sum 0)
(setf index1 0)
(setf index2 0)
(loop
(sb-thread:make-thread(lambda()(setf num (ash (* a (logand( ash b index1 ) 1 )) index2))))
(sleep 0.1)
(setf sum (+ sum  num))
(sleep 0.1)
(decf index1)
(incf index2)
(setf sub ( ash b index1 ) )
(when (= sub 0) (return 0))
)

(sleep 0.1)
(write-line "The product is: ")
(print sum)
)
